<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import java.net.URL?>
<AnchorPane fx:id="socioFichaView" xmlns:fx="http://javafx.com/fxml" stylesheets="@/css/style.css" prefWidth="850" prefHeight="400" id="socioFichaView" fx:controller="com.ivan.gimnasio.presentation.controller.SocioCardController">
    <children>
        <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <HBox spacing="40" alignment="CENTER_LEFT" styleClass="socio-card">

                <ImageView fx:id="fotoImageView" fitHeight="220" fitWidth="180" styleClass="socio-foto"/>

                <VBox spacing="14" alignment="CENTER_LEFT">
                    <Label fx:id="nombreLabel" styleClass="socio-nombre"/>
                    <Label fx:id="dniLabel" styleClass="socio-info"/>
                    <Label fx:id="fechaLabel" styleClass="socio-info"/>
                    <Label fx:id="telefonoLabel" styleClass="socio-info"/>
                    <Label fx:id="emailLabel" styleClass="socio-info"/>
                    <Label fx:id="estadoCuotaLabel" styleClass="socio-estado"/>
                    <Label fx:id="actividadesLabel" styleClass="socio-info"/>
                    <Button fx:id="btnEditar" text="Restaurar" styleClass="socio-button"/>
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
